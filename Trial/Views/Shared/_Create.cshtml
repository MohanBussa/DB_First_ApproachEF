@model Trial.Student

<div id="PopupForm" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog model-sm" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h3 class="modal-title" style="text-align:center">Add Student</h3>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">

                    <form id="FormId">
                        @Html.HiddenFor(model => model.Id, new { id = "txtid" })

                        <div class="form-group">
                            @Html.LabelFor(model => model.Name, new { @class = "control-label col-md-3" })
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.Name, new { HtmlAttributes = new { @class = "form-control", id = "StdName" } })
                                @Html.ValidationMessageFor(model => model.Name, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Gender, new { @class = "control-label col-md-3" })
                            <div class="col-md-6">
                                Male
                                @Html.RadioButtonFor(model => model.Gender, "Male", new { id = "StdGender" })
                                Female
                                @Html.RadioButtonFor(model => model.Gender, "Female", new { id = "ssStdGender" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-3" })
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.Email, new { HtmlAttributes = new { @class = "form-control", id = "StdEmail" } })
                                @Html.ValidationMessageFor(model => model.Email, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.MobileNo, new { @class = "control-label col-md-3" })

                            <div class="col-md-6 d-flex " style="display:flex">
                                <div class="col-md-6 d-flex " style="display:flex">
                                    @Html.DropDownList("CountryCodeId", null, htmlAttributes: new { @class = "form-control w-auto d-inline", id = "CountryCodeId", @style = "width:auto; display:inline; margin-left:-15px;" })

                                    @Html.ValidationMessageFor(model => model.CountryCodeId, null, new { @class = "text-danger" })

                                </div>
                             
                                @Html.EditorFor(model => model.MobileNo, new { HtmlAttributes = new { @class = "form-control w-auto d-inline", id = "StdMobileNo", @style = "width:auto; display:inline; margin-left:-15px;" } })
                                @Html.ValidationMessageFor(model => model.MobileNo, null, new { @class = "text-danger" })

                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.DateOfBirth, new { @class = "control-label col-md-3" })
                            <div class="col-md-6">

                                @Html.EditorFor(model => model.DateOfBirth, new { HtmlAttributes = new { @class = "form-control", id = "StdDateOfBirth" } })

                                @Html.ValidationMessageFor(model => model.DateOfBirth, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(model => model.Age, new { @class = "control-label col-md-3" })
                            <div class="col-md-6">
                                @Html.EditorFor(model => model.Age, new { HtmlAttributes = new { @class = "form-control", id = "StdAge",@readonly= "readonly" } })
                                @Html.ValidationMessageFor(model => model.Age, null, new { @class = "text-danger" })
                            </div>
                        </div>


                        <div class="form-group">
                            @Html.LabelFor(model => model.StandardId, "Standard", htmlAttributes: new { @class = "control-label col-md-3" })
                            <div class="col-md-6">

                                @Html.DropDownList("StandardId", null, htmlAttributes: new { @class = "form-control", id = "StandardId" })

                                @Html.ValidationMessageFor(model => model.Standard, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-3 col-md-3">
                                <button type="button" class="btn btn-primary" onclick="SubmitData()" id="submitform">Submit</button>
                            </div>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>


